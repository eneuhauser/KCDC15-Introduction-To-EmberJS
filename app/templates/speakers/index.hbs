<div class="row">
  <div class="col-md-12">
    <h1>Speakers</h1>
    <div class="speakers">
      {{#each model as |speaker|}}
        <div>
          {{#link-to 'speakers.speaker' speaker.slug}}
            {{display-image src=speaker.avatarUrl errorSrc="http://placehold.it/400x400"}}
            <h4>{{speaker.displayName}}</h4>
          {{/link-to}}
        </div>
      {{/each}}
    </div>
  </div>
</div>